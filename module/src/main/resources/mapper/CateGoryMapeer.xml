<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.food_demo.module.mapper.CategoryMapper">
    <select id="selectByLimit"
            parameterType="map" resultType="org.example.food_demo.module.entity.Category">
        SELECT * FROM category
        <where>
            <if test="keyWord != null and keyWord != ''">AND name LIKE CONCAT('%', #{keyWord}, '%')</if>
            AND is_deleted = 0
        </where>
        LIMIT #{offset}, #{limit}
    </select>
</mapper>